<%- include('../partials/header') %>

<h2>All Flights</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure</th>
      <th>Detail</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach( function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/flights/<%= f._id%>">Detail</a></td>
      </tr>
    <% })%>
  </tbody>
</table>

<%- include('../partials/footer') %>